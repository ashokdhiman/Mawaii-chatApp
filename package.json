{
    "name": "chat-app",
    "version": "1.0.0",
    "description": "MERN Stack Based Chat Application",
    "main": "server.js",
    "scripts": {
        "client-install": "npm install --prefix client",
        "start": "react-scripts --openssl-legacy-provider start node server.js",
        "build": "react-scripts --openssl-legacy-provider build",
        "server": "nodemon server.js",
        "client": "npm start --prefix client",
        "dev": "concurrently \"npm run server\" \"npm run client\""
    },
    "author": "Dave Howson",
    "license": "MIT",
    "dependencies": {
        "@google/generative-ai": "^0.5.0",
        "axios": "^1.6.8",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.2",
        "concurrently": "^8.2.2",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "http": "0.0.0",
        "is-empty": "^1.2.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.3.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "socket.io": "^4.7.5",
        "validator": "^13.11.0"
    },
    "devDependencies": {
        "eslint": "^9.0.0",
        "eslint-plugin-react": "^7.34.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "nodemon": "^3.1.0"
    }
}
